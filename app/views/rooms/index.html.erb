<p id="notice"><%= notice %></p>

    <div class="container-fluid">
      <div class="row">
        <div class="col-md-3 py-3">
            <%= render 'form', room: Room.new %>
            <hr>
            <% @rooms.each do |room| %>
              <%= link_to room do %>
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title"><%= room.name %></h5>
                  </div>
                </div>
              <% end %>
            <% end %>

            <br>

            <%#= link_to 'New Room', new_room_path %>
        </div>
        <div class="col-md-9">
          <% if @room.present? %>
            <h2><%= @room.name %></h2>
          <% end %>
        </div>
      </div>
    </div>


